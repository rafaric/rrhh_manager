generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                   String             @id @default(uuid()) @db.Uuid
  email                String             @unique
  password             String
  rol                  Role               @default(USER)
  nombre               String
  apellido             String
  dni                  Int                @unique
  telefono             String?
  direccion            String?
  ciudad               String?
  codigo_postal        String?
  contrato_id          String?            @db.Uuid
  empresa_id           String?            @db.Uuid
  solicitudLicencia_id String?            @db.Uuid
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  contrato             Contrato?          @relation(fields: [contrato_id], references: [id])
  empresa              Empresa?           @relation(fields: [empresa_id], references: [id])
  solicitud            SolicitudLicencia? @relation(fields: [solicitudLicencia_id], references: [id])
}

model Empresa {
  id       String    @id @default(uuid()) @db.Uuid
  name     String
  cuit     Int       @unique
  webSite  String?
  city     String
  country  String
  address  String
  phone    String
  email    String
  sector   String
  usuarios Usuario[]
}

model Contrato {
  id           String    @id @default(uuid()) @db.Uuid
  salario      Float
  descripcion  String
  cargo_id     String    @db.Uuid
  fecha_inicio DateTime  @default(now())
  fecha_fin    DateTime
  cargo        Cargo     @relation(fields: [cargo_id], references: [id])
  Usuario      Usuario[]
}

model SolicitudLicencia {
  id           String    @id @default(uuid()) @db.Uuid
  estado       Estado
  motivo       String
  tipo         Tipo
  fecha_inicio DateTime  @default(now())
  fecha_fin    DateTime
  Usuario      Usuario[]
}

model Cargo {
  id          String     @id @default(uuid()) @db.Uuid
  nombre      String
  descripcion String
  Contrato    Contrato[]
}

enum Role {
  ADMIN
  EMPLEADO
  USER
}

enum Estado {
  PENDIENTE
  APROBADO
}

enum Tipo {
  VACACIONES
  ENFERMEDAD
}
