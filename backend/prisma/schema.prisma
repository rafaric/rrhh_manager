generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                   String             @id @default(uuid()) @db.Uuid
  email                String             @unique
  password             String
  rol                  Role               @default(USER)
  nombre               String
  apellido             String
  dni                  Int                @unique
  telefono             String?
  direccion            String?
  ciudad               String?
  codigo_postal        String?
  contrato             Contrato?          @relation(fields: [contrato_id], references: [id])
  contrato_id          String?            @db.Uuid
  empresa              Empresa?           @relation(fields: [empresa_id], references: [id])
  empresa_id           String?            @db.Uuid
  solicitud            SolicitudLicencia? @relation(fields: [solicitudLicencia_id], references: [id])
  solicitudLicencia_id String?            @db.Uuid
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
}

enum Role {
  ADMIN
  EMPLEADO
  USER
}

model Empresa {
  id      String    @id @default(uuid()) @db.Uuid
  name    String
  ruc     Int       @unique
  address String
  Usuario Usuario[]
}

model Contrato {
  id           String    @id @default(uuid()) @db.Uuid
  salario      Float
  descripcion  String
  Usuario      Usuario[]
  cargo        Cargo     @relation(fields: [cargo_id], references: [id])
  cargo_id     String    @db.Uuid
  fecha_inicio DateTime  @default(now())
  fecha_fin    DateTime
}

model SolicitudLicencia {
  id           String    @id @default(uuid()) @db.Uuid
  estado       Estado
  motivo       String
  tipo         Tipo
  fecha_inicio DateTime  @default(now())
  fecha_fin    DateTime
  Usuario      Usuario[]
}

enum Estado {
  PENDIENTE
  APROBADO
}

enum Tipo {
  VACACIONES
  ENFERMEDAD
}

model Cargo {
  id          String     @id @default(uuid()) @db.Uuid
  nombre      String
  descripcion String
  Contrato    Contrato[]
}
