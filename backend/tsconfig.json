{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"module": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"composite": true,
		"sourceMap": true,
		"declarationMap": true,
		"lib": ["es2022"]
	},
	"exclude": ["./node_modules"]
}
